<Window x:Class="Fighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fighting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label FontSize="28" FontWeight="Bold" HorizontalAlignment="Center">Welcome to Fighting Simulator!</Label>
            <StackPanel Margin="0,50,0,0" Width="236">
                <Button Name="Fight_button" FontWeight="Bold" FontSize="18" Click="Fight_button_Click">Fight</Button>
                <Button x:Name="Characters_button" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" Click="Characters_button_Click">Characters</Button>
                <Button FontSize="18" FontWeight="Bold" Margin="0,10,0,0" Click="Button_Click">Create character</Button>
                <Button x:Name="Exit_button" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" Click="Exit_button_Click">Exit</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
